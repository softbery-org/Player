<Window x:Class="ThmdPlayer.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThmdPlayer"
        mc:Ignorable="d"
        Title="Update ThmdPlayer" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name="LabelProgress" Content="Download progress: 0%" FontSize="16" FontWeight="Bold" 
               HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,10"/>

        <ProgressBar x:Name="UpdateProgressBar" Width="750" Height="30" Minimum="0" Maximum="100" Value="0" 
                     HorizontalAlignment="Center" Grid.Row="1" Margin="0,0,0,20"/>

        <DockPanel HorizontalAlignment="Center" Grid.Row="2" Margin="0,0,0,20">
            <Button x:Name="CheckUpdateButton" Content="Check for Updates" Width="120" Height="30" 
                    Margin="10" Click="CheckUpdateButton_Click"/>
            <Button x:Name="RunUpdateButton" Content="Apply Update" Width="120" Height="30" 
                    Margin="10" Click="RunUpdateButton_Click" IsEnabled="False"/>
        </DockPanel>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <TextBlock x:Name="StatusTextBlock" Text="Status: Waiting" FontSize="14" 
                       TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </ScrollViewer>
    </Grid>
</Window>