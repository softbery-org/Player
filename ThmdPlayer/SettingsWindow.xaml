<Window x:Class="ThmdPlayer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThmdPlayer"
        mc:Ignorable="d"
        Title="Ustawienia odtwarzacza wideo" Height="440" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Ścieżka zapisu -->
        <Label Content="Ścieżka zapisu wideo:" Grid.Row="0" Margin="0,0,0,5" Grid.ColumnSpan="4"/>
        <Grid Grid.Row="1" Margin="0,0,0,10" Grid.ColumnSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="SavePathTextBox" Grid.Column="0" Margin="0,0,10,0" IsReadOnly="True"/>
            <Button x:Name="BrowseButton" Content="Przeglądaj..." Grid.Column="1" Width="100" Click="BrowseButton_Click" FontWeight="ExtraBold" />
        </Grid>

        <!-- Jakość wideo -->
        <Label Content="Jakość wideo:" Grid.Row="2" Margin="0,0,0,5" Grid.ColumnSpan="4"/>
        <ComboBox x:Name="VideoQualityComboBox" Grid.Row="3" Margin="0,0,0,10" Width="200" HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <ComboBoxItem Content="Niska (480p)"/>
            <ComboBoxItem Content="Średnia (720p)"/>
            <ComboBoxItem Content="Wysoka (1080p)"/>
        </ComboBox>

        <!-- Głośność domyślna -->
        <Label Content="Głośność domyślna:" Grid.Row="4" Margin="0,0,0,5" Grid.ColumnSpan="4"/>
        <Slider x:Name="VolumeSlider" Grid.Row="5" Minimum="0" Maximum="100" Value="50" Margin="0,0,0,30" Width="200" HorizontalAlignment="Left" Grid.RowSpan="2" Grid.ColumnSpan="2"/>

        <!-- Napisy do filmów -->
        <!-- Czcionka -->
        <Label Content="Czcionka:" Grid.Row="6" Margin="0,0,0,5" Grid.ColumnSpan="4"/>
        <ComboBox x:Name="FontFamilyComboBox" Grid.Row="6" Margin="0,37,0,10" Width="200" HorizontalAlignment="Left" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <!-- Wielkość czcionki -->
        <Label Content="Wielkość czcionki:" Grid.Row="7" Margin="0,37,0,5" Grid.ColumnSpan="1" Grid.RowSpan="2"/>
        <TextBox x:Name="FontSizeTextBox" Text="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="8" Margin="0,5,50,5"/>
        <!-- Pogrubienie -->
        <CheckBox x:Name="FontBolderCheckBox" Content="Pogrubienie" Grid.Row="9" Grid.Column="0" Margin="0,5,0,5" Grid.ColumnSpan="1"/>

        <!-- Automatyczne odtwarzanie -->
        <CheckBox x:Name="AutoPlayCheckBox" Content="Automatyczne odtwarzanie przy starcie" Grid.Row="11" Margin="0,0,0,10" Grid.ColumnSpan="4"/>

        <Button x:Name="Update" Grid.Column="3" Grid.Row="9" Grid.ColumnSpan="1" Margin="0,0,0,30" Grid.RowSpan="2" FontWeight="ExtraBold" Content="Update" Click="Update_Click"/>

        <!-- Przyciski akcji -->
        <StackPanel Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Left" Margin="55,0,0,0" Width="170" Grid.Column="2" Grid.ColumnSpan="2">
            <Button x:Name="SaveButton" Content="Zapisz" Width="80" Margin="0,0,10,0" Click="SaveButton_Click" FontWeight="ExtraBold" />
            <Button x:Name="CancelButton" Content="Anuluj" Width="80" Click="CancelButton_Click" FontWeight="ExtraBold" />
        </StackPanel>
    </Grid>
</Window>
