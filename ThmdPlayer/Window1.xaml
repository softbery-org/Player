<Window x:Class="ThmdPlayer.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThmdPlayer"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Window.Resources>
        <!-- Animacja gradientu -->
        <Storyboard x:Key="BackgroundAnimation">
            <ColorAnimation Storyboard.TargetName="GradientStop1"
                            Storyboard.TargetProperty="Color"
                            From="#1A1A3D" To="#4B0082"
                            Duration="0:0:5" AutoReverse="True" RepeatBehavior="Forever"/>
            <ColorAnimation Storyboard.TargetName="GradientStop2"
                            Storyboard.TargetProperty="Color"
                            From="#4B0082" To="#1A1A3D"
                            Duration="0:0:5" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>
    </Window.Resources>
    <Grid x:Name="MainGrid">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop x:Name="GradientStop1" Color="#1A1A3D" Offset="0"/>
                <GradientStop x:Name="GradientStop2" Color="#4B0082" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <!-- Canvas dla cząsteczek -->
        <Canvas x:Name="ParticleCanvas"/>
    </Grid>
</Window>
